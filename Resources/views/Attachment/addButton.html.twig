{% import 'OroUIBundle::macros.html.twig' as UI %}


    {{ UI.clientButton({
    'id': 'add-entity-attachment-button',
    'aCss': 'no-hash',
    'iCss': 'icon-paper-clip hide-text',
    'label' : 'oro.attachment.action.add'|trans
    }) }}
    <script type="text/javascript">
        require(['jquery', 'oroui/js/mediator'],
                function($, mediator){
                    $('#add-entity-attachment-button').on('click', function(e) {
                        e.preventDefault();
                        mediator.trigger('attachment:add');
                    });
                });
    </script>

